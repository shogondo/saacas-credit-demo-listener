<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopFragment"
    android:id="@+id/root"
    android:padding="16dp"
    android:orientation="vertical">

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/use_point"
        android:paddingBottom="16dp"
        android:id="@+id/point_button"
        bootstrap:bb_roundedCorners="true"
        bootstrap:bb_icon_left="fa-heart"
        android:layout_weight="1"
        android:textSize="30sp" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/use_coupon"
        android:paddingBottom="16dp"
        android:id="@+id/coupon_button"
        bootstrap:bb_roundedCorners="true"
        bootstrap:bb_icon_left="fa-ticket"
        android:layout_weight="1"
        android:textSize="30sp" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/use_credit_card"
        android:id="@+id/payment_button"
        bootstrap:bb_roundedCorners="true"
        bootstrap:bb_icon_left="fa-shopping-cart"
        bootstrap:bb_type="primary"
        android:layout_weight="1"
        android:textSize="30sp" />
</LinearLayout>
